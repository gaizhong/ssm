<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
        <!--这个namespace + 下面的id 就是一个完整的路径，在dao层我们写了完整的路径之后mybatis就是映射这个文件中的相关sql语句 -->  
<mapper namespace="mybatis">  
<!-- parameterType就是你接受的参数的类型，  -->  
<!-- 添加用户信息 -->  
<insert id="insertUser"  parameterType="entity.User">  
 insert  into  User(id,name,ename,password)  values(#{id},#{name},#{ename},#{password})  
</insert>  
  
<!--  查询返回的是 list<map> -->  
<!-- resultType 就是返回查询结果的类型，而如果是resultMap=则返回的就是你定义的javabean  -->  
<select  id="queryUser"  parameterType="String" resultType="entity.User">  
  select  * from user where ename=#{ename}  
</select>  
  
</mapper>